<% if user_signed_in? %>
  <% if current_user.liked_by?(profile.id) %>
      <%= link_to destroy_like_path(profile), method: :DELETE, remote: true do %>
        <i class="fa fa-heart unlike-btn"></i>
      <% end %>
      いいね<%= profile.likes.count %>
  <% else %>
      <%= link_to create_like_path(profile), method: :POST, remote: true do %>
        <i class="fa fa-heart like-btn"></i>
      <% end %>
      いいね<%= profile.likes.count %>
  <% end %>
<% end %>